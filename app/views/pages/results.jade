include ../layout

block content
	.container
		.row
			.panel.panel-default
				.panel-heading
					h3 #{ketword}
				.panel-body
					if movies && movies.length > 0
						each item in movies
							.col-md-2
								.thumbnail.clear-padding
									a(href='/movie/' + item._id)
										img(src=item.poster, alt=item.title)
									.caption
										h3 #{item.title}
										p: a.btn.tbn-primary(href="/movie/" + item._id, role="button") 观看预告片
			ul.pagination
				- for (var i = 0; i<totalPage; i++) {
					- if (currentPage == (i + 1)) {
						li.active
							span #{currentPage}
					- }
					- else {
						li
							a(href="/results?#{query}&p=#{i}") #{+i + 1}
					- }
				- }